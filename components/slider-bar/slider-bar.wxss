/* components/slider-bar.wxss */

.slider-bar {
  display: flex;
  flex-direction: row;
  width: 750rpx;
  padding: 10rpx 0;
  white-space: nowrap;
  background-color: #eee;
  overflow-x: scroll;
}
.slider-bar::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.slider-bar .bar-item {
  padding: 0 16rpx;
}